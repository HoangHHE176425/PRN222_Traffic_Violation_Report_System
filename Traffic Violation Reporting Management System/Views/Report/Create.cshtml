@model Traffic_Violation_Reporting_Management_System.Models.Report

@{
    ViewData["Title"] = "Tạo báo cáo";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>❗ Có lỗi xảy ra:</strong>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label>Địa điểm vi phạm</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Thời gian vi phạm</label>
        <input asp-for="TimeOfViolation" type="datetime-local" class="form-control" />
        <span asp-validation-for="TimeOfViolation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Chú thích</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh hoặc video</label>
        <input type="file" name="media" class="form-control-file" accept="image/*,video/*" />
        <span asp-validation-for="MediaPath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gửi báo cáo</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
