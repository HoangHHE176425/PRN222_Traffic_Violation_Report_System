@model Traffic_Violation_Reporting_Management_System.Helpers.PagedResult<Traffic_Violation_Reporting_Management_System.Models.FineResponse>
@using Microsoft.AspNetCore.Http
@{
    ViewBag.Title = "Danh sách khiếu nại";
    var request = Context.Request;
    int stt = (Model.Page - 1) * Model.PageSize + 1;
}

<h2>Danh sách Khiếu Nại</h2>

<form id="filterForm" method="get" asp-action="FineResponseList" class="row g-2 mb-3">
    <div class="col">
        <input type="text" name="search" class="form-control" placeholder="Tìm theo tên hoặc người lập phạt" value="@request.Query["search"]" />
    </div>
    <div class="col">
        <select id="statusSelect" name="status" class="form-select">
            <option value="">Tất cả trạng thái</option>
            <option value="0" selected="@(request.Query["status"] == "0")">Chờ xử lý</option>
            <option value="1" selected="@(request.Query["status"] == "1")">Đã xử lý</option>
        </select>
    </div>
    <div class="col">
        <button class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Người gửi</th>
            <th>Nội dung</th>
            <th>Thời gian tạo</th>
            <th>Trạng thái</th>
            <th>Phản hồi</th>
            <th>Ngày cập nhật</th>
            <th>Xem chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@stt</td>
                <td>@item.User.FullName</td>
                <td>@item.Content</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.Status == 0 ? "Chờ xử lý" : "Đã xử lý")</td>
                <td>@(item.Reply ?? "")</td>
                <td>@(item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.ResponseId">Chi tiết</a>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<!-- Phân trang -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.Page == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("FineResponseList", new { search = request.Query["search"], status = request.Query["status"], page = i })">@i</a>
            </li>
        }
    </ul>
</nav>

<script>
    document.getElementById('statusSelect').addEventListener('change', function () {
        const form = document.getElementById('filterForm');
        if (this.value === "") {
            this.name = "";
        }
        form.submit();
    });
</script>
