@model Traffic_Violation_Reporting_Management_System.DTOs.LoginRequest

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // Sử dụng layout riêng cho trang login
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Vi phạm Giao thông</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

</head>
<body class="auth-body">
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7 col-sm-9">
                    <div class="login-card">
                        <div class="login-header">
                            <i class="bi bi-shield-lock" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                            <h2>Đăng nhập</h2>
                            <p class="subtitle">Hệ thống Quản lý Vi phạm Giao thông</p>
                        </div>
                        
                        <div class="login-body">
                            <form asp-controller="Auth" asp-action="Login" method="post" id="loginForm" novalidate>
                                <input name="ReturnUrl" type="hidden" value="@ViewData["ReturnUrl"]" />
                                
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                                
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div asp-validation-summary="All" class="mb-0"></div>
                                    </div>
                                }
                                
                                <div class="form-floating">
                                    <input asp-for="Email" 
                                           class="form-control" 
                                           id="emailInput" 
                                           type="email" 
                                           placeholder="name@example.com"
                                           autocomplete="email"
                                           required />
                                    <label for="emailInput">
                                        <i class="bi bi-envelope me-2"></i>Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-validation"></span>
                                </div>
                                
                                <div class="form-floating">
                                    <input asp-for="Password" 
                                           class="form-control" 
                                           id="passwordInput" 
                                           type="password" 
                                           placeholder="Mật khẩu"
                                           autocomplete="current-password"
                                           required />
                                    <label for="passwordInput">
                                        <i class="bi bi-lock me-2"></i>Mật khẩu
                                    </label>
                                    <span asp-validation-for="Password" class="text-validation"></span>
                                </div>
                                
                                <div class="remember-me">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">
                                            Ghi nhớ đăng nhập
                                        </label>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-login" id="loginBtn">
                                    <span class="login-text">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                                    </span>
                                    <span class="loading-spinner">
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        Đang xử lý...
                                    </span>
                                </button>
                            </form>
                            
                            <div class="footer-text">
                                <p class="mb-0">
                                    Chưa có tài khoản? <a asp-controller="Auth" asp-action="Register">Đăng ký ngay</a>
                                </p>
                                <p class="mb-0 mt-1">
                                    <a asp-controller="Auth" asp-action="ForgotPassword">Quên mật khẩu?</a>
                                </p>
                                <p class="mb-0 mt-2">
                                    <small>&copy; 2025 Hệ thống Quản lý Vi phạm Giao thông</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Form submission với loading state
            $('#loginForm').on('submit', function() {
                const submitBtn = $('#loginBtn');
                const loginText = submitBtn.find('.login-text');
                const loadingSpinner = submitBtn.find('.loading-spinner');
                
                // Disable button và show loading
                submitBtn.prop('disabled', true);
                loginText.hide();
                loadingSpinner.show();
                
                // Re-enable nếu có lỗi validation
                setTimeout(function() {
                    if ($('.text-danger:visible, .alert-danger:visible').length > 0) {
                        submitBtn.prop('disabled', false);
                        loginText.show();
                        loadingSpinner.hide();
                    }
                }, 100);
            });
            
            // Focus vào email input khi trang load
            $('#emailInput').focus();
            
            // Enter key navigation
            $('#emailInput').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#passwordInput').focus();
                }
            });
            
            // Auto-submit khi nhấn Enter ở password field
            $('#passwordInput').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#loginForm').submit();
                }
            });
            
            // Real-time validation feedback
            $('#emailInput, #passwordInput').on('blur', function() {
                $(this).valid();
            });
        });
    </script>
</body>
</html> 