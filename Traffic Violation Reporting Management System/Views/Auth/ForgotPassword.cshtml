@model Traffic_Violation_Reporting_Management_System.DTOs.ForgotPasswordRequest

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Vi phạm Giao thông</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forgot-password.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7 col-sm-9">
                    <div class="login-card">
                        <div class="forgot-password-header">
                            <i class="bi bi-key icon"></i>
                            <h2>Quên mật khẩu?</h2>
                            <p class="subtitle">Nhập email để nhận mã xác thực đặt lại mật khẩu</p>
                        </div>
                        
                        <div class="login-body">
                            <form asp-controller="Auth" asp-action="ForgotPassword" method="post" id="forgotPasswordForm" novalidate>
                                
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div asp-validation-summary="All" class="mb-0"></div>
                                    </div>
                                }
                                
                                <div class="form-floating">
                                    <input asp-for="Email" 
                                           class="form-control" 
                                           id="emailInput" 
                                           type="email" 
                                           placeholder="name@example.com"
                                           autocomplete="email"
                                           required />
                                    <label for="emailInput">
                                        <i class="bi bi-envelope me-2"></i>Email đã đăng ký
                                    </label>
                                    <span asp-validation-for="Email" class="text-validation"></span>
                                </div>
                                
                                <button type="submit" class="btn btn-forgot-password" id="submitBtn">
                                    <span class="login-text">
                                        <i class="bi bi-send me-2"></i>Gửi mã xác thực
                                    </span>
                                    <span class="loading-spinner">
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        Đang xử lý...
                                    </span>
                                </button>
                            </form>
                            
                            <div class="footer-text">
                                <p class="mb-0">
                                    <a asp-controller="Auth" asp-action="Login">← Quay lại đăng nhập</a>
                                </p>
                                <p class="mb-0 mt-2">
                                    Chưa có tài khoản? <a asp-controller="Auth" asp-action="Register">Đăng ký ngay</a>
                                </p>
                                <p class="mb-0 mt-2">
                                    <small>&copy; 2025 Hệ thống Quản lý Vi phạm Giao thông</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/forgot-password.js" asp-append-version="true"></script>
</body>
</html> 