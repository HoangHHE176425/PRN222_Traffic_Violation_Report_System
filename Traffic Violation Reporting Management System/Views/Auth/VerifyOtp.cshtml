@model Traffic_Violation_Reporting_Management_System.DTOs.VerifyOtpRequest

@{
    ViewData["Title"] = "Xác thực OTP";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Vi phạm Giao thông</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <style>
        .otp-inputs {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 2rem 0;
        }
        
        .otp-input {
            width: 50px;
            height: 60px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            transition: all 0.3s ease;
        }
        
        .otp-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }
        
        .countdown {
            text-align: center;
            margin: 1rem 0;
            color: #6c757d;
        }
        
        .countdown.expired {
            color: #dc3545;
        }
        

        
        .success-message {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border-left: 4px solid #28a745;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body class="auth-body">
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7 col-sm-9">
                    <div class="login-card">
                        <div class="login-header">
                            <i class="bi bi-shield-check" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                            <h2>Xác thực OTP</h2>
                            <p class="subtitle">Nhập mã xác thực đã được gửi qua email</p>
                        </div>
                        
                        <div class="login-body">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="success-message">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    @TempData["SuccessMessage"]
                                </div>
                            }
                            
                            <form asp-controller="Auth" asp-action="VerifyOtp" method="post" id="verifyForm" novalidate>
                                
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div asp-validation-summary="All" class="mb-0"></div>
                                    </div>
                                }
                                
                                <div class="form-floating">
                                    <input asp-for="Email" 
                                           class="form-control" 
                                           id="emailInput" 
                                           type="email" 
                                           placeholder="name@example.com"
                                           autocomplete="email"
                                           readonly 
                                           required />
                                    <label for="emailInput">
                                        <i class="bi bi-envelope me-2"></i>Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-validation"></span>
                                </div>
                                
                                <div class="text-center mb-3">
                                    <small class="text-muted">Nhập mã OTP 6 số đã được gửi tới email của bạn</small>
                                </div>
                                
                                <!-- OTP Input với 6 ô riêng biệt -->
                                <div class="otp-inputs">
                                    <input type="text" class="otp-input" maxlength="1" id="otp1" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp2" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp3" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp4" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp5" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp6" />
                                </div>
                                
                                <!-- Hidden input để gửi OTP -->
                                <input asp-for="OtpCode" type="hidden" id="otpCodeInput" />
                                <span asp-validation-for="OtpCode" class="text-validation d-block text-center"></span>
                                
                                <!-- Countdown timer -->
                                <div class="countdown" id="countdown">
                                    <i class="bi bi-clock me-1"></i>
                                    Mã có hiệu lực trong: <span id="timer">10:00</span>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-login" id="verifyBtn">
                                    <span class="login-text">
                                        <i class="bi bi-shield-check me-2"></i>Xác thực
                                    </span>
                                    <span class="loading-spinner">
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        Đang xử lý...
                                    </span>
                                </button>
                                

                            </form>
                            
                            <div class="footer-text">
                                <p class="mb-0">
                                    <a asp-controller="Auth" asp-action="Login">← Quay lại đăng nhập</a>
                                </p>
                                <p class="mb-0 mt-2">
                                    <small>&copy; 2025 Hệ thống Quản lý Vi phạm Giao thông</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            let timeLeft = 600; 
            let timerInterval;
            
            
            startTimer();
            
            
            $('.otp-input').on('input', function() {
                
                this.value = this.value.replace(/[^0-9]/g, '');
                
                
                if (this.value.length === 1) {
                    const nextInput = $(this).next('.otp-input');
                    if (nextInput.length) {
                        nextInput.focus();
                    }
                }
                
                
                updateOtpCode();
            });
            
            
            $('.otp-input').on('keydown', function(e) {
                if (e.key === 'Backspace' && this.value === '') {
                    const prevInput = $(this).prev('.otp-input');
                    if (prevInput.length) {
                        prevInput.focus();
                    }
                }
            });
            
            $('#verifyForm').on('submit', function(e) {
                updateOtpCode();
                
                if ($('#otpCodeInput').val().length !== 6) {
                    e.preventDefault();
                    alert('Vui lòng nhập đầy đủ 6 số OTP');
                    return;
                }
                
                const submitBtn = $('#verifyBtn');
                const loginText = submitBtn.find('.login-text');
                const loadingSpinner = submitBtn.find('.loading-spinner');
                
                submitBtn.prop('disabled', true);
                loginText.hide();
                loadingSpinner.show();
               
                setTimeout(function() {
                    if ($('.text-danger:visible, .alert-danger:visible').length > 0) {
                        submitBtn.prop('disabled', false);
                        loginText.show();
                        loadingSpinner.hide();
                    }
                }, 100);
            });
            
         
            $('#otp1').focus();
        });
        
        function updateOtpCode() {
            let otpCode = '';
            $('.otp-input').each(function() {
                otpCode += $(this).val();
            });
            $('#otpCodeInput').val(otpCode);
        }
        
        function startTimer() {
            const timer = $('#timer');
            const countdown = $('#countdown');
            
            timerInterval = setInterval(function() {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                
                timer.text(
                    (minutes < 10 ? '0' : '') + minutes + ':' +
                    (seconds < 10 ? '0' : '') + seconds
                );
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    countdown.addClass('expired');
                    timer.text('Đã hết hạn');
                }
                
                timeLeft--;
            }, 1000);
        }

    </script>
</body>
</html> 