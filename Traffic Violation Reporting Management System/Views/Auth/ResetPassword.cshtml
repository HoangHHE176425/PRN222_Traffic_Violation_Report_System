@model Traffic_Violation_Reporting_Management_System.DTOs.ResetPasswordRequest

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Vi phạm Giao thông</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forgot-password.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="login-card">
                        <div class="reset-password-header">
                            <i class="bi bi-shield-lock icon"></i>
                            <h2>Đặt lại mật khẩu</h2>
                            <p class="subtitle">Nhập mã xác thực và mật khẩu mới của bạn</p>
                        </div>
                        
                        <div class="login-body">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="success-message">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    @TempData["SuccessMessage"]
                                </div>
                            }
                            
                            <form asp-controller="Auth" asp-action="ResetPassword" method="post" id="resetForm" novalidate>
                                
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div asp-validation-summary="All" class="mb-0"></div>
                                    </div>
                                }
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" 
                                           class="form-control" 
                                           id="emailInput" 
                                           type="email" 
                                           placeholder="name@example.com"
                                           readonly 
                                           required />
                                    <label for="emailInput">
                                        <i class="bi bi-envelope me-2"></i>Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-validation"></span>
                                </div>
                                
                                <div class="otp-instruction">
                                    <small>Nhập mã OTP 6 số đã được gửi tới email của bạn</small>
                                </div>
                                
                               
                                <div class="otp-inputs">
                                    <input type="text" class="otp-input" maxlength="1" id="otp1" tabindex="1" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp2" tabindex="2" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp3" tabindex="3" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp4" tabindex="4" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp5" tabindex="5" />
                                    <input type="text" class="otp-input" maxlength="1" id="otp6" tabindex="6" />
                                </div>
                                
                               
                                <input asp-for="OtpCode" type="hidden" id="otpCodeInput" />
                                <span asp-validation-for="OtpCode" class="text-validation d-block text-center"></span>
                                
                               
                                <div class="countdown" id="countdown">
                                    <i class="bi bi-clock"></i>
                                    Mã có hiệu lực trong: <span id="timer">10:00</span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="NewPassword" 
                                           class="form-control" 
                                           id="newPasswordInput" 
                                           type="password" 
                                           placeholder="Mật khẩu mới"
                                           autocomplete="new-password"
                                           required />
                                    <label for="newPasswordInput">
                                        <i class="bi bi-lock me-2"></i>Mật khẩu mới
                                    </label>
                                    <span asp-validation-for="NewPassword" class="text-validation"></span>
                                    <div id="passwordStrength" class="password-strength"></div>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" 
                                           class="form-control" 
                                           id="confirmPasswordInput" 
                                           type="password" 
                                           placeholder="Xác nhận mật khẩu"
                                           autocomplete="new-password"
                                           required />
                                    <label for="confirmPasswordInput">
                                        <i class="bi bi-lock-fill me-2"></i>Xác nhận mật khẩu
                                    </label>
                                    <span asp-validation-for="ConfirmPassword" class="text-validation"></span>
                                </div>
                                
                                <button type="submit" class="btn btn-forgot-password" id="resetBtn">
                                    <span class="login-text">
                                        <i class="bi bi-check-circle me-2"></i>Đặt lại mật khẩu
                                    </span>
                                    <span class="loading-spinner">
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        Đang xử lý...
                                    </span>
                                </button>
                            </form>
                            
                            <div class="footer-text">
                                <p class="mb-0">
                                    <a asp-controller="Auth" asp-action="Login">← Quay lại đăng nhập</a>
                                </p>
                                <p class="mb-0 mt-2">
                                    <small>&copy; 2025 Hệ thống Quản lý Vi phạm Giao thông</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/forgot-password.js" asp-append-version="true"></script>
</body>
</html> 