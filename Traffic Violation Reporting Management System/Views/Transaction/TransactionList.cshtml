@model Traffic_Violation_Reporting_Management_System.Helpers.PagedResult<Traffic_Violation_Reporting_Management_System.Models.Transaction>
@{
    ViewData["Title"] = "Danh sách giao dịch";
    int stt = (Model.Page - 1) * Model.PageSize + 1;
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="TransactionList" class="row mb-3">
    <div class="col-md-6">
        <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control" placeholder="Tìm theo tên người dùng" />
    </div>
    <div class="col-md-3">
        <select name="sortOrder" class="form-select" onchange="this.form.submit()">
            <option value="">Sắp xếp</option>
            <option value="amount_asc" selected="@(Context.Request.Query["sortOrder"] == "amount_asc")">Số tiền tăng</option>
            <option value="amount_desc" selected="@(Context.Request.Query["sortOrder"] == "amount_desc")">Số tiền giảm</option>
            <option value="created_asc" selected="@(Context.Request.Query["sortOrder"] == "created_asc")">Ngày tạo tăng</option>
            <option value="created_desc" selected="@(Context.Request.Query["sortOrder"] == "created_desc")">Ngày tạo giảm</option>
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Mã GD</th>
            <th>Người dùng</th>
            <th>Số tiền</th>
            <th>Ngày tạo</th>
            <th>Mô tả</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@stt</td>
                <td>@item.TransactionId</td>
                <td>@item.User?.FullName</td>
                <td>@item.Amount.ToString("N0", System.Globalization.CultureInfo.InvariantCulture) VNĐ</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.TransactionId" class="btn btn-sm btn-info">Chi tiết</a>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<!-- Phân trang -->

    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("TransactionList", new { search = Context.Request.Query["search"], sortOrder = Context.Request.Query["sortOrder"], page = i })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

