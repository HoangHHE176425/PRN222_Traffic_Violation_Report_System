@model Traffic_Violation_Reporting_Management_System.Models.ViolationBehavior
@{
    ViewData["Title"] = "Thêm lỗi vi phạm giao thông";
}
<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MinFineAmount" class="form-label"></label>
        <input asp-for="MinFineAmount" type="number" class="form-control" />
        <span asp-validation-for="MinFineAmount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaxFineAmount" class="form-label"></label>
        <input asp-for="MaxFineAmount" type="number" class="form-control" />
        <span asp-validation-for="MaxFineAmount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Thêm lỗi vi phạm</button>
    <a asp-action="ViolationBehaviorList" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
