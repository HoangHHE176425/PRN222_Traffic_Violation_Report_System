@model Traffic_Violation_Reporting_Management_System.Helpers.PagedResult<Traffic_Violation_Reporting_Management_System.Models.Fine>

@{
    ViewData["Title"] = "Danh sách phiếu phạt";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-success">+ Tạo phiếu phạt mới</a>
</div>


<form asp-action="FineList" method="get" class="row row-cols-1 row-cols-md-4 g-2 mb-3">
    <div>
        <input type="text" name="search" value="@Context.Request.Query["search"]" placeholder="Tìm theo biển số xe" class="form-control" />
    </div>
    <div>
        <select name="status" class="form-select" onchange="this.form.submit()">
            <option value="">-- Tất cả trạng thái --</option>
            <option value="0" selected="@(Context.Request.Query["status"] == "0")">Chưa thanh toán</option>
            <option value="1" selected="@(Context.Request.Query["status"] == "1")">Đã thanh toán</option>
            <option value="2" selected="@(Context.Request.Query["status"] == "2")">Đã hủy</option>
        </select>
    </div>
    <div>
        <select name="sortOrder" class="form-select" onchange="this.form.submit()">
            <option value="">-- Sắp xếp theo --</option>
            <option value="amount_asc" selected="@(Context.Request.Query["sortOrder"] == "amount_asc")">Số tiền ↑</option>
            <option value="amount_desc" selected="@(Context.Request.Query["sortOrder"] == "amount_desc")">Số tiền ↓</option>
            <option value="created_desc" selected="@(Context.Request.Query["sortOrder"] == "created_desc")">Ngày tạo ↓</option>
            <option value="created_asc" selected="@(Context.Request.Query["sortOrder"] == "created_asc")">Ngày tạo ↑</option>
            <option value="paid_desc" selected="@(Context.Request.Query["sortOrder"] == "paid_desc")">Ngày trả ↓</option>
            <option value="paid_asc" selected="@(Context.Request.Query["sortOrder"] == "paid_asc")">Ngày trả ↑</option>
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Biển số xe</th>
            <th>Số tiền</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
            <th>Chi tiết</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            var fine = Model.Items[i];
            <tr>
                <td>@((Model.Page - 1) * Model.PageSize + i + 1)</td> <!-- STT -->
                <td>@fine.IssuedBy</td>
                <td>@fine.Amount.GetValueOrDefault().ToString("N0", System.Globalization.CultureInfo.InvariantCulture) VNĐ</td>

                <td>
                    @if (fine.Status == 0)
                    {
                        @:Chưa thanh toán
                    }
                    else if (fine.Status == 1)
                    {
                        @:Đã thanh toán
                    }
                    else if (fine.Status == 2)
                    {
                        @:Đã hủy
                    }
                </td>
                <td>@fine.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@fine.PaidAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@fine.FineId" class="btn btn-sm btn-info">Chi tiết</a>
                </td>
                <td>
                    @if (fine.Status == 0)
                    {
                        <form asp-action="Cancel" asp-route-id="@fine.FineId" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn hủy phiếu phạt này không?');">
                            <button type="submit" class="btn btn-sm btn-danger">Hủy</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("FineList", new { 
                    page = i, 
                    pageSize = Model.PageSize, 
                    search = Context.Request.Query["search"], 
                    status = Context.Request.Query["status"], 
                    sortOrder = Context.Request.Query["sortOrder"]
                })">@i</a>
            </li>
        }
    </ul>
</nav>
