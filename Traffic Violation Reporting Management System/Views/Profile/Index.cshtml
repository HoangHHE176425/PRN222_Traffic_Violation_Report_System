@model Traffic_Violation_Reporting_Management_System.Models.User

@{
    ViewData["Title"] = "User Profile";
    var vehicles = ViewBag.Vehicles as List<Traffic_Violation_Reporting_Management_System.Models.Vehicle>;
}

<div class="container mt-5">
    <h2 class="text-primary">Thông tin cá nhân</h2>
    <hr />

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Họ và tên:</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">CCCD:</dt>
            <dd class="col-sm-9">@Model.Cccd</dd>

            <dt class="col-sm-3">Số điện thoại:</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Địa chỉ:</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Vai trò:</dt>
            <dd class="col-sm-9">
                @if (Model.Role == 0)
                {
                    <span>Người dùng</span>
                }
                else if (Model.Role == 1)
                {
                    <span>Cảnh sát giao thông</span>
                }
                else if (Model.Role == 2)
                {
                    <span>Admin</span>
                }
            </dd>

            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">
                @(Model.IsActive ? "Hoạt động" : "Bị khóa")
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <h3 class="text-success">Danh sách phương tiện</h3>
        <hr />
        @if (vehicles != null && vehicles.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Biển số</th>
                        <th>Nhãn hiệu</th>
                        <th>Màu</th>
                        <th>Số khung</th>
                        <th>Số máy</th>
                        <th>Ngày đăng ký</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in vehicles)
                    {
                        <tr>
                            <td>@v.VehicleNumber</td>
                            <td>@v.Brand</td>
                            <td>@v.Color</td>
                            <td>@v.ChassicNo</td>
                            <td>@v.EngineNo</td>
                            <td>@v.RegistrationDate?.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Không có phương tiện nào được đăng ký với CCCD này.</p>
        }
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại</a>
        
    </div>
</div>
